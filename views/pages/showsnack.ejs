<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../partials/header.ejs") %>
</head>

<body>

    <%- include ("../partials/nav.ejs") %>

        <div class="table-wrapper">
            <% if (snack.lenght> 0 ){%>
                <table class="table table hovered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                </table>
                <tbody>
                    <% snack.forEach(snack, index)==> {%>
                        <tr>
                            <th scope="row">
                                <%= snack.id %>
                            </th>
                            <td img src="assets/img/<%=snack.image%>" class="rounded-circle player-img" alt=""></td>
                            <td>
                                <% snack.name %>
                            </td>
                            <td>
                                <% snack.amount %>
                            </td>
                            <td>
                                <% snack.price %>
                            </td>
                            <td>
                                <a href="/edit/<%=player.id%>" target="_blank" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%=player.id%>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        } %>
                </tbody>
                <table>
                    <% } else { %>
                        <p class="text-center">No Snack. Go <a href="/add">here</a>to add snack</p>
                    <% } %>
                </table>
        </div>



</body>

</html>