                                                <label for="">ราคา:</label>
                                                <input type="number" id="" name="price" min="1" max="50"
                                                    value="<%= value[key].price %>"> บาท <br>

                                                <label for="">จำนวน:</label>
                                                <input type="number" id="" name="amount" min="0" max="9"
                                                    value="<%= value[key].amount %>"> ชิ้น <br>

                                                <button style='margin-top: 5px; font-size:14px; color:red'
                                                    type="submit"> บันทึก <i class='fas fa-save'></i></button>
                                            </form>

                                        </div>
                                    </div>
                                </div>

                                <% if ( x%2 !=0 ) { %>
                        </div>

                        <% } %>

                            <% x=x + 1 ; %>
                                <% } %>
