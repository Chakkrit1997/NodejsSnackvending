                    <% if ( x%2==0 ) { %>
                        <div class="row mt-5">
                            <% } %>
                                <div class="col">
                                    <img class="img-fluid img-edit" src="<%= value[key].img %>" alt="">
                                </div>

                                <div class="form-detail text-left" style="width: 120px;">
                                    <label class="product-detail_2" for="Name">
                                        <%= value[key].name %>
                                    </label> <br>

                                    <label class="product-detail_2" for="Price">ราคา <%= value[key].price %> บาท</label>
