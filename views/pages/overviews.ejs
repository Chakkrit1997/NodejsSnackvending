            <div class="middle" id="piechart" style="width: 900px; height: 500px;"></div>
        </div>

        <!-- Detail -->
        <div class="row">

            <div class="col-6">
                <div class="sum-head">
                    <h4>ฺBest selling snack (ขนมขายดี)</h4> 
                </div>
                <div class="sum-data">
                    กูนี่ไง
