                                        <%# var date1=new Date(); %>
                                            <%# var date2=new Date("Tue Mar 16 2021 21:33:52"); %>

                                                <%# var s2=new Date().toJSON().slice(0,10).split('-').join(','); %>
                                                    <%#= date2 %>
